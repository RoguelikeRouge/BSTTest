<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/canvas"
    android:layout_gravity="center|bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cameron.bsttest.Practice"
    tools:showIn="@layout/activity_practice">




    <Button
        android:id="@+id/test_custom_button1"
        android:text="←"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="buttonPressed"

        />

    <Button
        android:id="@+id/test_custom_button2"
        android:text="Answer 1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/test_custom_button1"
        android:background="@drawable/custom_button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="buttonPressed"

        />
    <Button
        android:id="@+id/test_custom_button3"
        android:text="Answer 1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/test_custom_button2"
        android:background="@drawable/custom_button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="buttonPressed"

        />

    <Button
        android:id="@+id/test_custom_button4"
        android:text="Answer 1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/test_custom_button3"
        android:background="@drawable/custom_button_shape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="buttonPressed"

        />



    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></LinearLayout>

</RelativeLayout>
